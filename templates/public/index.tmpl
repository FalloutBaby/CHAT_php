<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" type="text/css" href="./css/style.css">
    <title>ЧАТ | Вход</title>
	<script src="./js/jquery-3.3.1.js"></script>
</head>
<body>

<script type="text/javascript" src="js/window.js"></script>
<script>
$(document).ready(function () {
    text = $('#chat_input');
    $('#submit').click(function (event) {
		console.log(text.val());
        conn.send(text.val());

        // Очищаем поле ввода.
        text.val('');

        // Отменяем отправку формы.
        return false;
    });
	
    scroll();
	
	$('.register').submit(function (event) {
		$.post({
			url:"index/register",
			data:$(this).serialize(),
    		success:function(){
				$('#authorise').load(document.URL +  ' #authorise');
    		}
			});
        // Отменяем отправку формы.
        return false;
    });
	$('.login').submit(function (event) {
		$.post({
			url:"index/login",
			data:$(this).serialize(),
    		success:function(html){
				conn.send('User in system!');
				console.log(html);
				$('#authorise').load(document.URL +  ' #authorise');
    		}
			});
        // Отменяем отправку формы.
        return false;
    });
});
</script>
<div id="chat_output"></div>
<h2>{{account}}</h2>
<div id="authorise">
{% if account != true %}
	<h3>Авторизуйтесь, чтобы начать писать сообщения.</h3>
	<form  class='login' action='index' method="post">
    	<input class='upload_input' type="text" name="user" placeholder="Никнейм">
    	<input class='upload_input' type="password" name="password" placeholder="Пароль">
    	<input class='menu_list_link centered' type="submit">
	</form>
	<h3>Если вы впервые здесь, то зарегистрируйтесь:</h3>
	<form class='registration' action='index' method="post">
    	<input class='upload_input' type="text" name="user" placeholder="Никнейм">
    	<input class='upload_input' type="password" name="password" placeholder="Пароль">
    	<input class='menu_list_link centered' type="submit">
	</form>
{% else %}
	<input id="chat_input" placeholder="Введите сообщение..."/>
	<input id="submit" type="submit"/>
{% endif %}
</div>
</body>
</html>